# ========================================
# TEMPLATE .ENV UNTUK PRODUCTION
# ========================================
# Copy file ini ke .env di server production
# Kemudian isi dengan nilai yang sesuai
# ========================================

APP_NAME="Planning Monitoring"
APP_ENV=production
APP_KEY=base64:GENERATE_NEW_KEY_WITH_php_artisan_key:generate
APP_DEBUG=false
APP_TIMEZONE=Asia/Jakarta
APP_URL=https://yourdomain.com

# ========================================
# LOGGING
# ========================================
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=warning

# ========================================
# DATABASE (Sesuaikan dengan compose.production.yaml)
# ========================================
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=laravel
DB_USERNAME=sail
DB_PASSWORD=GANTI_PASSWORD_AMAN_MINIMUM_20_KARAKTER_RANDOM

MYSQL_ROOT_PASSWORD=GANTI_ROOT_PASSWORD_AMAN_MINIMUM_20_KARAKTER_RANDOM

# ========================================
# SESSION & CACHE (Database untuk production)
# ========================================
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=yourdomain.com
SESSION_SECURE_COOKIE=true

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database
CACHE_PREFIX=

# ========================================
# OPTIONAL: REDIS (Aktifkan jika pakai Redis)
# ========================================
# REDIS_CLIENT=phpredis
# REDIS_HOST=redis
# REDIS_PASSWORD=null
# REDIS_PORT=6379

# ========================================
# MAIL (Sesuaikan dengan provider Anda)
# ========================================
MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# ========================================
# SANCTUM & AUTH
# ========================================
SANCTUM_STATEFUL_DOMAINS=yourdomain.com

# ========================================
# VITE (Production - Build sudah dilakukan)
# ========================================
VITE_APP_NAME="${APP_NAME}"

# ========================================
# MONITORING (Optional - untuk Sentry, dll)
# ========================================
# SENTRY_LARAVEL_DSN=
# SENTRY_TRACES_SAMPLE_RATE=0.1

# =============================================
# PLANLY APP - PRODUCTION ENVIRONMENT
# VPS: 103.56.148.34:8082
# =============================================
# INSTRUKSI:
# 1. Copy file ini menjadi .env di server production
# 2. Ganti nilai APP_KEY dengan key yang sudah di-generate
# 3. Sesuaikan DB_PASSWORD dengan password yang aman
# 4. Sesuaikan MAIL settings dengan SMTP Anda
# =============================================

APP_NAME="Planly App"
APP_ENV=production
APP_KEY=base64:GENERATE_KEY_WITH_PHP_ARTISAN_KEY_GENERATE
APP_DEBUG=false
APP_TIMEZONE=Asia/Jakarta
APP_URL=http://103.56.148.34:8082

APP_LOCALE=id
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=id_ID

APP_MAINTENANCE_DRIVER=file

# Production security
BCRYPT_ROUNDS=12

# Logging
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Database (MySQL in Docker)
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=planly_production
DB_USERNAME=planly_user
DB_PASSWORD=PlanlySecure2026!

# Session
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=103.56.148.34

# Broadcasting, Queue, Cache
BROADCAST_CONNECTION=log
FILESYSTEM_DISK=public
QUEUE_CONNECTION=database
CACHE_STORE=database

# Redis (optional, jika menggunakan Redis)
REDIS_CLIENT=phpredis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail Configuration (sesuaikan dengan SMTP Anda)
MAIL_MAILER=smtp
MAIL_SCHEME=null
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_FROM_ADDRESS="noreply@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# Vite
VITE_APP_NAME="${APP_NAME}"
VITE_APP_URL=http://103.56.148.34:8082

# FrankenPHP / Caddy
SERVER_NAME=":80"
FRANKENPHP_CONFIG="root public/"

# Production optimization
OPCACHE_ENABLE=1
OPCACHE_VALIDATE_TIMESTAMPS=0

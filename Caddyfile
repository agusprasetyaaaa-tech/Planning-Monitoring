{
    frankenphp
    # Izinkan traffic dari proxy lokal (Nginx)
    trusted_proxies static private_ranges
}

:80 {
    root * public/
    encode zstd gzip
    
    # Memberitahu Laravel bahwa request aslinya adalah HTTPS
    header {
        X-Forwarded-Proto https
        X-Forwarded-Host {host}
    }

    php_server
}

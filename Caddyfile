{
    frankenphp
    # Tambahkan ini agar FrankenPHP tahu dia berada di belakang proxy
    trusted_proxies static private_ranges
}

:80 {
    root * public/
    encode zstd br
    
    # Tambahkan header ini agar Laravel tahu request aslinya adalah HTTPS
    header_up X-Forwarded-Proto {scheme}
    
    php_server
}
